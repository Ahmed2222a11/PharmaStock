<div class="div-phone">
  <div class="div-title-phone">
    <h1>PharmaStock</h1>
  </div>
  <div class="div-show-pharmacies">
    <div class="div-img-pharmacies">
    </div>
    <div class="div-medicaments d-flex justify-content-between">
      <div class="d-flex">
        <div class="div-img-medicaments">
        </div>
        <div class="justify-content-between">
          <div class="d-flex flex-column div-nom-medoc">
            <h3>
              <%= @medicament.nom %>
            </h3>
            <div class="d-flex div-quantite-show-pharma justify-content-start">
              <h5>Quantité :</h5>
              <p> <%= @quantite %> </p>
            </div>
          </div>
          <% if @medicament1 && @quantite1 %>
            <div class="d-flex flex-column div-nom-medoc">
              <h3>
                <%= @medicament1.nom %>
              </h3>
              <div class="d-flex div-quantite-show-pharma justify-content-start">
                <h5>Quantité :</h5>
                <p> <%= @quantite1 %></p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <%= link_to "Panier", new_booking_path(pharmacie_id:@pharmacie.id, quantite: @quantite, medicament: @medicament, medicament1: @medicament1, qty1: @quantite1), class: "btn-panier-show-pharmacie" %>
    </div>
    <div class="div-infos-pharmacies d-flex flex-column">
      <h3><%= @pharmacie.nom %> </h3>
      <div class="infos-pharmacies">
        <div class="d-flex">
          <i class="fa-solid fa-phone"></i>
          <p><%= @pharmacie.telephone %> </p>
        </div>
        <div class="d-flex">
          <i class="fa-solid fa-house"></i>
          <p><%= @pharmacie.adresse %> </p>
        </div>
        <div class="d-flex horaires" data-controller="hidden-text">
          <i class="fa-solid fa-clock"></i>
          <div class="d-flex flex-column justify-content-start ">
            <div class="d-flex">
              <p class="horaires-show">Horaires </p>
              <span data-action="click->hidden-text#toggleText">
                <img src="https://cdn.icon-icons.com/icons2/2645/PNG/512/chevron_down_icon_160252.png" alt=""></span>
            </div>
            <div class="tableau-horaires hidden" data-hidden-text-target="display">
              <% if @pharmacie.horaires.present?  %>
                <p class="horaires-show"><%= @pharmacie.horaires %></p>
              <% else %>
                <p>Cette Pharmacie n'as pas communiquer ses horaires.</p>
              <% end  %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
