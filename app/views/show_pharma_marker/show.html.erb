<div class="div-phone">
  <div class="d-flex div-title-phone justify-content-center">
    <h1 class="title-pharma">Pharma</h1>
    <h1 class="title-stock">Stock</h1>
  </div>
  <div class="div-show-pharmacies">
    <div class="<%= session[:veto] ? "div-img-pharmacies div-img-pharmacies-veto" : "div-img-pharmacies div-img-pharmacies-human" %>">
    </div>
    <div class="div-btn-back-index-pharma-page d-flex justify-content-end">
    <%= link_to :back, class: session[:veto] ? "btn-back-show-reservation btn-back-show-reservation-veto" : "btn-back-show-reservation btn-back-show-reservation-human" do %>
          <i class="fa-solid fa-circle-arrow-left"></i>
        <% end %>
    </div>
    <div class="div-infos-pharmacies d-flex flex-column">
      <h3><%= @pharmacie.nom %> </h3>
      <div class="infos-pharmacies">
        <div class="d-flex">
          <i class="fa-solid fa-phone"></i>
          <p><%= @pharmacie.telephone %> </p>
        </div>
        <div class="d-flex">
          <i class="fa-solid fa-house"></i>
          <p><%= @pharmacie.adresse %> </p>
        </div>
        <div class="d-flex horaires" data-controller="hidden-text">
          <i class="fa-solid fa-clock"></i>
          <div class="d-flex flex-column justify-content-start ">
            <div class="d-flex">
              <p class="horaires-show">Horaires </p>
              <span data-action="click->hidden-text#toggleText">
                <img src="https://cdn.icon-icons.com/icons2/2645/PNG/512/chevron_down_icon_160252.png" alt=""></span>
            </div>
            <div class="tableau-horaires hidden" data-hidden-text-target="display">
              <% if @pharmacie.horaires.present?  %>
                <p class="horaires-show"><%= @pharmacie.horaires %></p>
              <% else %>
                <p>Cette Pharmacie n'as pas communiqu√© ses horaires.</p>
              <% end  %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
